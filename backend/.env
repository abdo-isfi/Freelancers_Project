# Server
PORT=4000
NODE_ENV=development

# JWT
JWT_ACCESS_SECRET=your_access_secret_here_minimum_32_characters_long
JWT_REFRESH_SECRET=your_refresh_secret_here_minimum_32_characters_long
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Database (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=freelancer_mgmt
DB_USER=root
DB_PASSWORD=secret

# Test Database (SQLite)
TEST_DB_STORAGE=:memory:

# Security & Rate Limiting
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000
RATE_LIMIT_AUTH_MAX=100

# Pagination
PAGINATION_DEFAULT_LIMIT=20
PAGINATION_MAX_LIMIT=100

# Email (Optional - leave empty to disable)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=
